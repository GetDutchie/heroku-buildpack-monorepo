#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"


if [ "$API_ONLY" == "TRUE" ]; then
  (
    (echo "Removing all UI code for API Only" | indent)
    rm -rf "${BUILD_DIR}/${APP_BASE}/imports/startup" &&
    rm -rf "${BUILD_DIR}/${APP_BASE}/imports/ui" &&
    rm -rf "${BUILD_DIR}/${APP_BASE}/client" &&
    mv "${BUILD_DIR}/${APP_BASE}/client-api" "${BUILD_DIR}/${APP_BASE}/client" &&
    mv "${BUILD_DIR}/${APP_BASE}/client/main.html.disabled" "${BUILD_DIR}/${APP_BASE}/client/main.html"
  )
fi

(
    rm "${BUILD_DIR}/${APP_BASE}/imports/shared" &&
    mv "${BUILD_DIR}/shared/imports" "${BUILD_DIR}/${APP_BASE}/imports/shared" &&
    mv "${BUILD_DIR}/${APP_BASE}" "${STAGE}" &&
    rm -rf "${BUILD_DIR}" &&
    mv "${STAGE}/$(basename "$APP_BASE")" "${BUILD_DIR}"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Copied ${APP_BASE} to root of app successfully" | indent
